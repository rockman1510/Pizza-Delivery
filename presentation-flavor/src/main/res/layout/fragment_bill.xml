<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

        <TextView
            android:id="@+id/tvBill"
            style="@style/TextHeader"
            android:layout_marginTop="60dp"
            android:text="@string/order_success"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvFlavor"
            style="@style/TextSubHeader"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/selected_flavor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBill" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSelectedFlavor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFlavor" />

        <TextView
            android:id="@+id/tvTotal"
            style="@style/TextSubHeader"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvSelectedFlavor" />

        <Button
            android:id="@+id/btClose"
            style="@style/TextHeader"
            android:layout_marginTop="30dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTotal" />
</androidx.constraintlayout.widget.ConstraintLayout>